<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context" xmlns="http://www.springframework.org/schema/beans"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd">

	<context:annotation-config />

	<!-- make applicationContext to know placeholder -->
	<context:property-placeholder
		location="classpath:commons-topease.properties, classpath:log4j.properties"
		file-encoding="utf-8" />

	<bean id="commons-topease.swing.desktopPane.DesktopPane" class="com.xplus.commons.topease.DesktopPan"
		init-method="init">
	</bean>

	<bean id="commons-topease.swing.frame.MainFrame" class="com.xplus.commons.topease.MainFrame"
		init-method="init">
		<property name="desktopPane"
			ref="commons-topease.swing.desktopPane.DesktopPane" />
		<property name="menus">
			<list>
				<ref bean="commons-topease.swing.menu.TopeaseMenu" />
				<ref bean="commons-topease.swing.menu.ExcelMenu" />
				<ref bean="commons-topease.swing.menu.ToolMenu" />
			</list>
		</property>
	</bean>

	<bean id="commons-topease.swing.menu.TopeaseMenu" class="com.xplus.commons.topease.TopeaseMenu"
		init-method="init">
		<property name="text" value="Topease" />
		<property name="menuItems">
			<list>
				<ref bean="commons-topease.swing.menuItem.CodeMenuItem" />
			</list>
		</property>
	</bean>

	<bean id="commons-topease.swing.menuItem.CodeMenuItem" class="com.xplus.commons.topease.CodeMenuItem"
		init-method="init">
		<property name="text" value="Code" />
	</bean>

	<bean id="commons-topease.swing.menu.ExcelMenu" class="com.xplus.commons.topease.ExcelMenu"
		init-method="init">
		<property name="text" value="Excel" />
	</bean>

	<bean id="commons-topease.swing.menu.ToolMenu" class="com.xplus.commons.topease.ToolMenu"
		init-method="init">
		<property name="text" value="Tool" />
		<property name="menuItems">
			<list>
				<ref bean="commons-topease.swing.menuItem.CleanMavenMenuItem" />
			</list>
		</property>
	</bean>

	<bean id="commons-topease.swing.menuItem.CleanMavenMenuItem"
		class="com.xplus.commons.topease.CleanMavenMenuItem" init-method="init">
		<property name="text" value="Clean Maven" />
		<property name="internalFrame"
			ref="commons-topease.swing.intrnalFrame.CleanMavenInternalFrame" />
	</bean>

	<bean id="commons-topease.swing.intrnalFrame.CleanMavenInternalFrame"
		class="com.xplus.commons.topease.CleanMavenInternalFrame" init-method="init">
		<property name="title" value="Clean Maven Folder Files." />
	</bean>

	<bean id="commons-topease.swing.runnable.SwingAppRunnable" class="com.xplus.commons.topease.SwingAppRunnable">
		<property name="frame" ref="commons-topease.swing.frame.MainFrame" />
	</bean>

	<bean id="commons-topease.swing.swingApp" class="com.xplus.commons.topease.SwingApp">
		<property name="runnable"
			ref="commons-topease.swing.runnable.SwingAppRunnable" />
	</bean>

</beans>